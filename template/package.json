{
  "name": "<%= name  %>",
  "version": "0.0.0",
  "description": "<%= description  %>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/znck/<%= name  %>.git"
  },
  "keywords": [
  ],
  "author": {
    "name": "Rahul Kadyan",
    "email": "hi@znck.me",
    "url": "https://znck.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/znck/<%= name  %>/issues"
  },
  "homepage": "https://github.com/znck/<%= name  %>#readme",
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-jest": "^24.0.0",
    "husky": "^1.3.0",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.0",
    "rollup": "^1.1.0",
    "rollup-plugin-babel": "^4.3.0",
    "rollup-plugin-typescript2": "^0.19.0",
    "ts-jest": "^24.0.0"
  },
  "scripts": {
    "test": "jest",
    "pre:build": "rm -rf dist/",
    ":build": "rollup -c --environment BUILD:production",
    "prepublishOnly": "npm run :build",
    "pre:release": "npm run test",
    ":release": "standard-version",
    "post:release": "git push --follow-tags origin master && npm publish",
    "release": "npm run :release"
  },
  "files": [
    "dist/"
  ],
  "browserslist": "> 0.25%, not dead",
  "main": "dist/<%= name  %>.js",
  "module": "dist/<%= name  %>.es.js",
  "browser": "src/index.js",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {  
      "pre-commit": "lint-staged"
    }
  }
}
